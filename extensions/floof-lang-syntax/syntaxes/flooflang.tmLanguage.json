{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FloofLang",
  "scopeName": "source.flooflang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#function-declaration" },
    { "include": "#types" },
    { "include": "#numbers" },
    { "include": "#function-call" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.flooflang",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.flooflang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.flooflang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.flooflang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flooflang",
          "match": "\\b(if|else|while|for|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.flooflang",
          "match": "\\b(using|pub|proc|struct|const|extern)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.flooflang",
          "match": "\\b(u0|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|char|usize)\\b"
        },
        {
          "name": "entity.name.type.flooflang",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b(?!\\s*\\()"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.flooflang",
          "match": "\\b0[xX][0-9a-fA-F]+([uUlL]+)?\\b"
        },
        {
          "name": "constant.numeric.float.flooflang",
          "match": "\\b-?[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?[fF]?\\b"
        },
        {
          "name": "constant.numeric.float.flooflang",
          "match": "\\b-?[0-9]+[eE][+-]?[0-9]+[fF]?\\b"
        },
        {
          "name": "constant.numeric.integer.flooflang",
          "match": "\\b-?[0-9]+([uUlL]+)?\\b"
        }
      ]
    },
    "function-declaration": {
      "patterns": [
        {
          "match": "\\b(proc)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "keyword.other.flooflang"
            },
            "2": {
              "name": "entity.name.function.flooflang"
            }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "name": "entity.name.function.call.flooflang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.flooflang",
          "match": ":=|="
        },
        {
          "name": "keyword.operator.pointer.flooflang",
          "match": "\\*|&"
        },
        {
          "name": "keyword.operator.arrow.flooflang",
          "match": "->"
        },
        {
          "name": "keyword.operator.arithmetic.flooflang",
          "match": "\\+|-|/|%"
        },
        {
          "name": "keyword.operator.comparison.flooflang",
          "match": "==|!=|<=?|>=?"
        },
        {
          "name": "keyword.operator.logical.flooflang",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.flooflang",
          "match": "<<|>>|\\||\\^|~"
        }
      ]
    }
  }
}